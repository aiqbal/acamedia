<h1>Create Discipline</h1>
<div class="errors">
  <%=error_messages_for 'discipline' %>
</div>

<%form_for :discipline do |form|%>
  <table>
    <tr>
      <td>Name</td>
      <td><%= form.text_field :name, :size => 40 %></td>
    </tr>
    <tr>
      <td>Description</td>
      <td><%= form.text_area :description, :rows => 5, :cols => 70 %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= submit_tag %></td>
    </tr>
  </table>
<%end%>